:root
{
	--joker-light-purple: rgb(190,128,255)
}
body
{
	text-align: center;
	list-style-position: inside;
	background-color:  var(--joker-light-purple);
}
header
{
	background-color:  purple;
	border: 5px dashed green;
	margin: 10px 100px;
}
header h1
{
	font-size:  70pt;
	margin-top:  15px;
	margin-bottom: 0;
}
header h2
{
	font-size:  30pt;
	color: var(--joker-light-purple);
	font-variant: small-caps;
}
main h1
{
	font-size:  80pt;
	font-family: 'Brush Script MT', cursive;
	margin: 0;
}
h1+h2
{
	margin-top: -15px;
}
main h2
{
	text-decoration: underline;
	font-weight: bold;
	margin-bottom: 0;
}
main ul
{
	display:  table;
	margin: 0 auto;
	text-align:  left;
	padding-left: 2px;
}
#wantedlist
{
	font-size: 35pt;
	float:  right;
}
